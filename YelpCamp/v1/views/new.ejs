<% include partials/header %>
<div class="container">
        <h1>Create a New Campground</h1>

        <form action="/campgrounds" method="post">
            <div class="form-group">
                <label for="inputName">Name: </label>
                <input type="text" class="form-control" name="inputName" id="inputName" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="inputImage">Image: </label>
                <input type="text" class="form-control" name="inputImage" id="inputImage" placeholder="Image URL">
            </div>
            <button class="btn btn-success btn-block btn-lg">Submit</button>
        </form>
        <br>
        <div class="text-center">
            <a href="/campgrounds" class="">Go back</a>
        </div>
</div>

