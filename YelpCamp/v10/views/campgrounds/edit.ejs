<% include ../partials/header %>
<div class="container card my-4 p-4">
        <h1>Edit Campground: <%=campground.name%>%></h1>

        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post" class="mb-4">
            <div class="form-group">
                <label for="name">Name: </label>
                <input type="text" class="form-control" name="campground[name]" id="name" placeholder="Name" value="<%=campground.name%>">
            </div>
            <div class="form-group">
                <label for="description">Description: </label>
                <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="10"><%=campground.description%></textarea>
            </div>
            <div class="form-group">
                <label for="image">Image: </label>
                <input type="text" class="form-control" name="campground[image]" id="image" placeholder="Image URL" value="<%=campground.image%>">
            </div>
            <button class="btn btn-success btn-block btn-lg">Submit</button>
        </form>
        <br>
        <div class="text-center mb-2">
            <a href="/campgrounds/<%=campground._id%>" class="">Go back</a>
        </div>
</div>

<% include ../partials/footer %>