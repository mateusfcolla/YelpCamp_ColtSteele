<% include ../partials/header %>

<div class="container py-4">
    <div class="card mb-2">
        <img src="<%=campground.image%>" class="card-image-top">
        <div class="card-body">
            <h1 class="text-center"><%=campground.name%></h1>
            <p><%=campground.description%></p>
            <p class="text-center"><a href="/campgrounds">Go back</a></p>
            <p class="text-center"><a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-warning">Edit</a></p>
        </div>
    </div>
    <h4 class="mb-2">Comments:</h4>
<% campground.comments.forEach((comment)=>{ %>
    <div class="card mb-2">
        <div class="card-body">
                <p><%=comment.text%></p>
                <small><%=comment.author%></small>
        </div>
    </div>
<%})%>
    <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-primary">Add new comment</a>
</div>

<% include ../partials/footer %>